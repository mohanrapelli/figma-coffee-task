<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bro"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="@color/br">
        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="60dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:src="@drawable/coffee1"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/image"
                    android:layout_weight="0.37"
                    app:shapeAppearanceOverlay="@style/RoundedSquare">

                </com.google.android.material.imageview.ShapeableImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cappuccino"
                        android:textSize="20dp"
                        android:textColor="@color/white">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="coffeename"
                        android:id="@+id/name"
                        android:textSize="20dp"
                        android:textColor="@color/white">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:id="@+id/price"
                        android:textSize="20dp"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:text="count"
                    android:textSize="30dp"
                    android:paddingBottom="30dp"
                    android:id="@+id/size"
                    android:drawableLeft="@drawable/baseline_remove_24"
                    android:drawableRight="@drawable/baseline_add_24"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingTop="70dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>