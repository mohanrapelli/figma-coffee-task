<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/b">
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="270dp"
        app:cardCornerRadius="50dp"
        android:padding="10dp"
        android:background="#403D3D"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#403D3D"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="145dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/tea"
                android:id="@+id/teaimage"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cinnamon"
android:layout_marginLeft="15dp"
                android:textColor="#CCC6C6"
                android:textSize="20dp"
                android:id="@+id/teaname"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cocoa"
                android:id="@+id/teename"

                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textColor="#CCC6C6" />
          <androidx.cardview.widget.CardView
              android:layout_width="90dp"
              android:layout_height="40dp"
              app:cardCornerRadius="50dp"
              android:backgroundTint="@color/black">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/teaprice"
                  android:textSize="18dp"
                  android:text="99"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:textColor="@color/white">

              </TextView>

          </androidx.cardview.widget.CardView>
</LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>